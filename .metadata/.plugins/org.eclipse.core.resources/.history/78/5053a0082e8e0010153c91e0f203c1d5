#ifndef INC_STEPPER_H_
#define INC_STEPPER_H_



class Stepper(){
public:
	int8_t id;
	int32_t resolution;
	Stepper (int8_t ID, int32_t Resolution);

	void VelocityMode (int32_t Rpm);
	void PositionMode (int32_t Position);
	void QuickStop();
	void DecStop();
	void ResetMotor();
private:
	void Acceleration ();
}





#endif /* INC_STEPPER_H_ */
